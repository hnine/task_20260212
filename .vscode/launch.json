{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Launch API",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/src/EmployeeContactManager.Api/EmployeeContactManager.Api.csproj"
    },
    {
      "name": "Frontend: Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: API + Frontend",
      "configurations": ["Backend: Launch API", "Frontend: Dev Server"],
      "stopAll": true
    }
  ]
}